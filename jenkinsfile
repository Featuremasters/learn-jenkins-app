pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                    ls -la
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('test') {
            steps {
                sh '''
                    echo "RUN TEST"
                    test -f build/index.html
                    npm run test 
                    '''
            }
        }
        stage('E2E') {
            steps {
                sh '''
                    npm install -g serve
                    "C:\Users\Naveen L\learn-jenkins-app\node_modules\.bin\serve -s build
                    npx playwright test
                '''
            }
        }
    }
    post {
        always {
        junit 'test-results/junit.xml'
        }
    }

}

