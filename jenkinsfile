pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                steps {
                sh '''
                    ls -la
                    npm ci
                    npm run build
                    ls -la
                '''
            }
            }
        }
        stage('test') {
            steps {
                sh '''
                    test -f build/index.html
                    npm ci
                    npm run test 
                    '''
            }
        }
    }
}
